<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HorizontalSplit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_1dp</item>
        <item name="android:background">@color/split_line</item>
        <item name="android:layout_marginStart">@dimen/line_margin_10dp</item>
        <item name="android:layout_marginEnd">@dimen/line_margin_10dp</item>
    </style>

    <style name="VerticalSplit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_1dp</item>
        <item name="android:background">@color/split_line</item>
        <item name="android:layout_marginTop">@dimen/line_margin_10dp</item>
        <item name="android:layout_marginBottom">@dimen/line_margin_10dp</item>
    </style>
</resources>